{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:earlyMondays",
        "helpers:pinGitHubActionDigests"
    ],
    "branchPrefix": "renovate-",
    "commitMessageAction": "Renovate Update",
    "labels": [
        "Dependencies",
        "Renovate"
    ],
    "configMigration": true,
    "packageRules": [
        {
            "groupName": "PHP version updates",
            "groupSlug": "php-version",
            "matchUpdateTypes": ["major", "minor"],
            "prPriority": 1,
            "minimumReleaseAge": "3 days",
            "matchManagers": ["dockerfile", "docker-compose"],
            "matchPackageNames": ["php", "jakzal/phpqa"]
        },
        {
            "automerge": true,
            "groupName": "Patch & Minor Updates",
            "groupSlug": "all-minor-patch-updates",
            "matchUpdateTypes": ["minor", "patch"],
            "prPriority": 1,
            "minimumReleaseAge": "3 days",
            "matchPackageNames": ["*"]
        },
        {
            "automerge": true,
            "groupName": "Github Patch & Minor Updates",
            "groupSlug": "github-minor-patch-updates",
            "matchUpdateTypes": ["minor", "patch"],
            "prPriority": 2,
            "minimumReleaseAge": "3 days",
            "matchPackageNames": ["*"],
            "matchFileNames": [".github/**"]
        }
    ],
    "major": {
        "labels": [
            "Dependencies",
            "Renovate"
        ],
        "minimumReleaseAge": "3 days"
    },
    "vulnerabilityAlerts": {
        "groupName": "Vulnerability Patches",
        "dependencyDashboardApproval": false,
        "minimumReleaseAge": null,
        "rangeStrategy": "update-lockfile",
        "commitMessagePrefix": "[SECURITY]",
        "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
        "prCreation": "immediate"
    }
}
